<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="24" alignment="TOP_CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.MainController">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Back (top-left) -->
    <HBox alignment="CENTER_LEFT" maxWidth="Infinity">
        <!--<Hyperlink text="Back" onAction="#onBackToHome"/> -->
        <Button text="Home"
                onAction="#onBackToHome"
                prefWidth="70" prefHeight="36"
                style="-fx-background-color: #FFFFFF;
                       -fx-font-size: 12;
                       -fx-background-radius: 6;
                       -fx-border-color: black;
                       -fx-border-radius: 6;
                       -fx-text-fill: #333;"/>
    </HBox>

    <!-- Title -->
    <Label text="Define Programming Languages">
        <font><Font size="42"/></font>
    </Label>

    <!-- Field label -->
    <Label text="Enter Programming Languages">
        <font><Font size="20"/></font>
    </Label>

    <!-- Input -->
    <TextArea fx:id="nameInput"
              promptText="Enter your languages: Java, Python, etc."
              wrapText="true"
              prefWidth="820"
              prefHeight="260"
              style="-fx-font-size:16;"/>

    <!-- Buttons (centered) -->
    <HBox alignment="CENTER" spacing="24">
        <Button text="Cancel"
                onAction="#onCancelForm"
                prefWidth="140" prefHeight="36"
                style="-fx-background-color: transparent;
                       -fx-border-color: #BDBDBD;
                       -fx-border-radius: 6;
                       -fx-background-radius: 6;
                       -fx-text-fill: #333;"/>
        <Button text="Submit"
                onAction="#onSubmitLanguage"
                prefWidth="140" prefHeight="36"
                style="-fx-background-color: #000000;
                       -fx-text-fill: white;
                       -fx-background-radius: 6;"/>
    </HBox>

</VBox>
